<?xml version="1.0" encoding="UTF-8"?>
<!-- xmlns= xml namespace -->
<beans
   xmlns="http://www.springframework.org/schema/beans"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xmlns:p="http://www.springframework.org/schema/p"
   xsi:schemaLocation="http://www.springframework.org/schema/beans
               http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
     
    <!-- Autowire by Name 
    <bean id="engine" class="com.spring.Engine"></bean> 
    <bean id="veh" class="com.spring.Vehicle" autowire="byName"></bean> 
    --> 
     
     
    <!-- Autowire by type -->
    <bean id="eng" class="com.spring.Engine"></bean> 
    <bean id="veh" class="com.spring.Vehicle" autowire="byType"></bean> 
 
     
    <!-- Autowire by constructor 
    <bean id="eng1" class="com.spring.Engine"></bean> 
    <bean id="veh1" class="com.spring.Vehicle" autowire="constructor"></bean> 
    -->
    
</beans>